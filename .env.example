# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/lordmoon_db"
DIRECT_URL="postgresql://username:password@localhost:5432/lordmoon_db"

# Server Configuration
PORT=3005
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (Nodemailer/SendGrid)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@lordmoon.com

# Payment Gateway APIs
# Paystack
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Flutterwave
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_public
FLUTTERWAVE_WEBHOOK_SECRET=your_flutterwave_webhook_secret

# Monnify
MONNIFY_API_KEY=your_monnify_api_key
MONNIFY_SECRET_KEY=your_monnify_secret_key
MONNIFY_CONTRACT_CODE=your_contract_code

# VTU Service (MaskawaSubAPI)
MASKAWA_API_KEY=your_maskawa_api_key
MASKAWA_BASE_URL=https://maskawasubapi.com/api

# KYC Verification APIs
# Dojah API
DOJAH_API_KEY=your_dojah_api_key
DOJAH_APP_ID=your_dojah_app_id
DOJAH_BASE_URL=https://api.dojah.io

# IdentityPass API
IDENTITYPASS_API_KEY=your_identitypass_api_key
IDENTITYPASS_BASE_URL=https://api.myidentitypass.com

# Media Storage (Cloudinary - Backup)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Media Storage (Supabase - Primary)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key
SUPABASE_BUCKET=uploads

# Firebase Configuration (for FCM notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application Configuration
APP_NAME=Lordmoon
APP_URL=https://lordmoon.com
FRONTEND_URL=http://localhost:3005
ADMIN_EMAIL=admin@lordmoon.com

# Service Fees (in percentage)
DEPOSIT_FEE=3
WITHDRAWAL_FEE=3
TRANSACTION_FEE=3

# Currency Configuration
DEFAULT_CURRENCY=NGN
SUPPORTED_CURRENCIES=NGN,USD
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
