{
  "name": "lordmoon-backend",
  "version": "1.0.0",
  "description": "Multi-Service Marketplace PWA Backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec \"ts-node --project tsconfig-node.json\" src/server.ts",
    "build": "prisma generate && tsc",
    "postbuild": "node recreate-database.js",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/services",
    "test:integration": "jest tests/integration",
    "test:ci": "jest --coverage --watchAll=false",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:deploy": "prisma migrate deploy",
    "fix-migration": "node scripts/fix-migration.js",
    "migrate:safe": "npm run fix-migration && npx prisma migrate deploy",
    "fix-render-db": "node fix-render-db.js",
    "sync-db": "node sync-database-schema.js",
    "emergency-check": "node emergency-db-check.js"
  },
  "keywords": [
    "marketplace",
    "pwa",
    "wallet",
    "social",
    "vtu"
  ],
  "author": "Lordmoon Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.8",
    "axios": "^1.13.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eventsource": "^4.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.3.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0-rc.4",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.7",
    "paystack-node": "^0.3.0",
    "pg": "^8.16.3",
    "prisma": "^5.7.1",
    "redis": "^4.6.11",
    "serverless-http": "^3.2.0",
    "socket.io": "^4.7.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@vercel/node": "^5.5.5",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5"
  },
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    }
  },
  "engines": {
    "node": "22.x"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
